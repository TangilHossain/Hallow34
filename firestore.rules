rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // FIRESTORE SECURITY RULES FOR HALLOW34 APP
    // ============================================
    //
    // This app uses Firebase Authentication with real email.
    // BP Number is stored in user document with document ID = bpNumber
    // ============================================

    // Admin BP numbers
    function isAdminBpNumber(bpNumber) {
      return bpNumber == "8414116694" || bpNumber == "8000000000";
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user's email matches the document's email
    function isOwner(bpNumber) {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(bpNumber)) &&
             get(/databases/$(database)/documents/users/$(bpNumber)).data.email == request.auth.token.email;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      // Allow all for now - in production you'd check admin BP numbers
      return true;
      // To enable strict admin check, uncomment below and comment above:
      // return isAuthenticated() &&
      //        exists(/databases/$(database)/documents/users/8414116694) &&
      //        get(/databases/$(database)/documents/users/8414116694).data.email == request.auth.token.email;
    }

    // Users collection rules
    match /users/{bpNumber} {
      // Allow read for everyone (needed for login check and directory)
      // Note: Password is NOT stored in Firestore, only in Firebase Auth
      allow read: if true;

      // Allow create for authenticated users - they must set their email matching auth
      allow create: if isAuthenticated() &&
                      request.resource.data.bpNumber == bpNumber &&
                      request.resource.data.email == request.auth.token.email;

      // Allow update only for owner or admin
      allow update: if isOwner(bpNumber) || isAdmin();

      // Allow delete only for admin
      allow delete: if isAdmin();
    }

    // Notifications collection rules (for FCM notification history)
    match /notifications/{notificationId} {
      // Anyone can read notifications
      allow read: if true;

      // Only authenticated users can create notifications
      allow create: if isAuthenticated();

      // Only admin can update or delete notifications
      allow update, delete: if isAdmin();
    }

    // Banners collection rules (for home screen announcements)
    match /banners/{bannerId} {
      // Anyone can read banners (to display on home screen)
      allow read: if true;

      // Only admin can create, update, or delete banners
      allow create, update, delete: if isAdmin();
    }

    // Default: deny all other access to undefined collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
